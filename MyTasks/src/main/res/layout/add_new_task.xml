<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/new_task_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_task_name" />

    <EditText android:id="@+id/new_task_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_task_name"
        android:hint="@string/new_task_description" />

    <Button
        android:id="@+id/create_new_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_task_button" />

</LinearLayout>




